\renewcommand{\bfseries}{\headingfont\color{headercolor}}
\newcommand{\entry}[4]{%
  #1&\parbox[t]{15.5cm}{%
    \textbf{#2}%
    \hfill%
    {\headingfont\addfontfeature{Color=headercolor} #3}\\%
    #4\vspace{\parsep}%
  }\\}


